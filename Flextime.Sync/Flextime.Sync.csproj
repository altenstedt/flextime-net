<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Inhill.Flextime.Sync</AssemblyName>
    <RootNamespace>Inhill.Flextime.Sync</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Flextime\Flextime.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <!-- We want to use ICU time zones on Windows -->
    <!-- https://learn.microsoft.com/en-us/dotnet/api/system.timezoneinfo.tryconvertianaidtowindowsid?view=net-8.0#remarks -->
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>

</Project>
